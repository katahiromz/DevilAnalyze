DOTOBJ = .obj
DOTEXE = .exe

DEFS = -DMBCS -D_MBCS
#DEFS = -DUNICODE -D_UNICODE
CXXFLAGS = $(DEFS) -WC
RCFLAGS = $(DEFS)

HEADERS = \

OBJS = \
	DevilAnalyze$(DOTOBJ) \

all: DevilAnalyze$(DOTEXE)

DevilAnalyze$(DOTEXE): $(OBJS)
	bcc32 $(CXXFLAGS) -eDevilAnalyze$(DOTEXE) $(OBJS)

DevilAnalyze$(DOTOBJ): DevilAnalyze.cpp $(HEADERS)
	bcc32 $(CXXFLAGS) -c DevilAnalyze.cpp

clean:
	if exist *.obj del *.obj
	if exist *.tds del *.tds
